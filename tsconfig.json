{
    "compilerOptions": {
        "target": "es5",
        "strict": true,
        "sourceMap": true,
        "module": "es2015",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "allowJs": false, 
        "noImplicitAny": false

    },
    "include":[
        "src/*"
    ],
    "exclude": [
        "node_modules"
    ],
    
    "typeRoots": [
        "./node_modules/@types",
        "./node_modules/phaser/types"
    ],
    "types": [
        "Phaser",
        "vuetify"
    ]
}
